alias tlp-summary='sudo tlp-stat | grep "TLP Status\|^State\|^RDW state\|^Last run\|^Mode \|^Power source\|energy_full_design\|energy_full\|energy_now\|power_now\|status\|^Charge\|^Capacity"'
alias power_summary='tlp-summary && echo "\n" && echo "+++ Undervolt Status" && undervoltRead'
