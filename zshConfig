# Monitoring
function infiniteLoop()
{
infiniteLoopVar01=1
while true
do
printf "Loop iteration number ${infiniteLoopVar01}\n"
date
${@}
infiniteLoopVar01=$((infiniteLoopVar01+1))
printf "\n"
sleep 10s
done
}

