alias bat_thresh_off='echo 0 | sudo tee /sys/bus/platform/drivers/ideapad_acpi/VPC2004:00/conservation_mode >> /dev/null && cat /sys/bus/platform/drivers/ideapad_acpi/VPC2004:00/conservation_mode'
